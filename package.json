{
  "name": "semanami-ai-voice-assistant",
  "version": "1.0.0",
  "description": "AI-powered voice assistant platform featuring speech coaching, reading comprehension, and interactive language learning with real-time feedback and personalized content.",
  "keywords": [
    "ai-voice-assistant",
    "speech-coaching",
    "reading-comprehension",
    "language-learning",
    "voice-recognition",
    "pronunciation-feedback",
    "interactive-chat",
    "personalized-learning",
    "voice-activity-detection",
    "language-practice",
    "ai-education",
    "speech-analysis",
    "text-to-speech",
    "natural-language-processing",
    "machine-learning",
    "react",
    "nodejs",
    "python",
    "postgresql",
    "websocket"
  ],
  "author": {
    "name": "SemaNami Team",
    "email": "team@semanami-ai.com",
    "url": "https://semanami-ai.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/semanami-ai.git",
    "directory": "."
  },
  "homepage": "https://semanami-ai.com",
  "bugs": {
    "url": "https://github.com/your-org/semanami-ai/issues",
    "email": "support@semanami-ai.com"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "deploy": "npm run build && npm run deploy:server",
    "deploy:server": "cd server && npm run deploy"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "platform": {
    "name": "SemaNami AI Voice Assistant",
    "type": "web-application",
    "category": "education",
    "features": [
      "Speech Coaching with Real-time Feedback",
      "Reading Comprehension with Personalized Articles",
      "Interactive Chat Scenarios",
      "Voice Activity Detection",
      "Pronunciation Analysis",
      "Multi-language Support",
      "Adaptive Learning Algorithms",
      "Progress Tracking"
    ],
    "technologies": [
      "React.js",
      "Node.js",
      "Python",
      "PostgreSQL",
      "WebSocket",
      "Web Speech API",
      "Machine Learning",
      "Natural Language Processing"
    ],
    "targetAudience": [
      "Language Learners",
      "Professionals",
      "Educators",
      "Accessibility Users"
    ]
  },
  "config": {
    "unsafe-perm": true
  }
}
